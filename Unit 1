//1.6.3

import java.util.Scanner;class U1_L6_Activity_Three {public static void main(String[] args){Scanner scan=new Scanner(System.in);System.out.println("Please input a decimal number:");double x=scan.nextDouble();System.out.println("Answer: "+((int)((x-(int)x)*10))+" "+((int)(((x*10)-((int)(x*10)))*10)));}}

//Movie Ratings

import java.util.Scanner;class Assignment1{public static void main(String[] args){Scanner ohno=new Scanner(System.in);System.out.println("Please enter the movie name");String name=ohno.nextLine();System.out.println("\nPlease enter the running time in minutes.");int time=ohno.nextInt();System.out.println("\nPlease enter ratings from the movie review website.");int fmrw=ohno.nextInt();int smrw=ohno.nextInt();int tmrw=ohno.nextInt();System.out.println("\nenter ratings from the focus group.");double ffg=ohno.nextDouble();double sfg=ohno.nextDouble();System.out.println("\nPlease enter the average movie critic rating.");double amcr=ohno.nextDouble();double amrw=(1.0*(fmrw+smrw+tmrw))/3;double afg=(ffg+sfg)/2;int ave=(int)(((2*amrw + 3*afg + 5*amcr)/10)+0.5);System.out.println("\nTitle: "+name);System.out.println("Running time: "+(time/60)+"h"+(time-((time/60)*60)));System.out.println("Average website rating: "+amrw);System.out.println("Average focus group rating: "+afg);System.out.println("Average movie critic rating: "+amcr);System.out.println("Overall movie rating: "+ave);}}
