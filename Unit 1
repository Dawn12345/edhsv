import java.util.Scanner;class U1_L4_Activity_One{public static void main(String[] args){Scanner x=new Scanner(System.in);System.out.println("Please input an integer. ");int y=x.nextInt();System.out.println("number is now "+ (++y));System.out.println("number is now "+ (++y));System.out.println("number is now "+ (++y));System.out.println("number is now "+ (--y));System.out.println("number is now "+ (--y));System.out.println("number is now "+ (--y));}}

